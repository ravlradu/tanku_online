<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> erori la salvare:</h2>

      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Nume' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label 'Disponibilă la vânzare' %>
    <%= form.check_box :is_visible %>
  </div>

  <%= form.hidden_field :parent_id, value: params[:parent_id] %>

  <div class="actions">
    <%= form.submit 'Salvează' %>
  </div>
<% end %>

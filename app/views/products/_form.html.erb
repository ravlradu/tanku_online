<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> erori au apărut la salvare:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Nume' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label 'Imagine' %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label 'Descriere' %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label 'Categoria' %>
    <%= form.select :category_id, Category.all.map { |c| [ c.name, c.id ] } %>
  </div>

  <div class="field">
    <%= form.label 'disponibil spre vânzare' %>
    <%= form.check_box :is_visible %>
  </div>

  <div class="field">
    <%= form.label 'Preț în bani' %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label 'Bucăți disponibile' %>
    <%= form.number_field :available_count %>
  </div>

  <div class="actions">
    <%= form.submit 'Salvează' %>
  </div>
<% end %>

<p><%== pagy_nav(@pagy) %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Nume</th>
      <th>Descriere</th>
      <th>Categorie</th>
      <th>Vizibil</th>
      <th>UM</th>
      <th>Preț</th>
      <th>Promo</th>
      <th>Preț Vechi</th>
      <th>Cantitate</th>
      <th colspan="3"> Action</th>
      <th>
        Categorie
      </th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td> <%= image_tag product.image_url([50,50]), size:"50x50" %> </td>
        <td><%= product.name %></td>
        <td><%= truncate(product.description, length: 20) %></td>
        <td><%= product.category&.name %></td>
        <td>
            <div class="form-group">
              <%= check_box_tag :is_visible, product.is_visible, product.is_visible,{onchange:"updateVisibility('#{product.id}')"} %>
            </div>
        </td>
        <td><%= product.um %></td>
        <td><%= price product.price %></td>
        <td><%= product.promo %></td>
        <td><%= product.old_price ? (price product.old_price):'' %></td>
        <td><%= product.available_count %></td>
        <td><%= link_to 'Arată', product %></td>
        <td><%= link_to 'Modifică', edit_product_path(product) %></td>
        <td><%= link_to 'Șterge', product, method: :delete, data: { confirm: 'Ești sigur?' } %></td>
        <td>
            <div class="form-group">
              <%= select_tag "category_id_#{product.id}", options_from_collection_for_select(Category.all, "id", "selector_name", product.category_id) ,{include_blank:"Selecteaza categoria",onchange:"updateCategory(#{product.id}, this)",class:"form-control col-lg-10"} %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

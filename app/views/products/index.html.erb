            <%= file_field_tag :csv_file, class:"form-control-file" %>
          </div>
          <%= submit_tag "Upload", class:"btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Filtrare produse</div>
  <div class="panel-body">
    <div class="row">
      <%= form_with do |f| %>
        <div class="form-group col-lg-4">
          <%= f.label "Categorie" %>
          <%= f.select :category_id, [["Fara categorie",-1]] + Category.selectable.map { |c| [c.selector_name, c.id] } ,{include_blank:"Toate"}, {onchange:"showByCategory(this)",class:"form-control"} %>
        </div>
        <div class="form-group col-lg-4">
          <%= f.label "Cod Produs" %>
          <%= text_field_tag :code_search,nil, {class:"form-control", onkeyup:'filterByCode(this)'} %>
        </div>
        <div class="form-group col-lg-4">
          <%= f.label "Nume Produs" %>
          <%= text_field_tag :name_search,nil, {class:"form-control", onkeyup:'filterByName(this)'} %>
        </div>
      <% end %>
    </div>
  </div>
</div>


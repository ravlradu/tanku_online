<div>
  <h2>Coșul de cumpărături</h2>

  <% if session[:basket].to_a.empty? %>
    <p>Nimic în coș!</p>
  <% else %>

    <table>
      <thead>
      <td>Produs</td>
      <td>Cantitate</td>
      <td>Preț unitar</td>
      <td>Preț total</td>
      </thead>
      <tbody>
      <% total = 0 %>
      <% session[:basket].each do |prod_id, prod_qty| %>
        <% prod = Product.find(prod_id) %>
        <% total += prod.price * prod_qty %>
        <tr>
          <td><%= prod.name %></td>
          <td><%= prod_qty %></td>
          <td><%= price prod.price %></td>
          <td><%= price(prod.price * prod_qty) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <h4>Total: <%= price total %></h4>

    <%# <%= link_to 'Trimite comanda', action: 'send_order' %> %>
  <% end %>
</div>

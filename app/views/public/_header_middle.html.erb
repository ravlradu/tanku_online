<div class="header_middle">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3">
                <div class="logo">
                    <a href="/"> <%=image_tag("logo/logo.png")%></a>
                </div>
            </div>
            <div class="col-lg-9">
                <div class=" header_right_info">
                    <div class="col-lg-7 search_container">
                         <%= form_with do %>
                           <div class="hover_category">
                             <%= select_tag :category, options_from_collection_for_select(@main_categories, "id", "name"), include_blank:"Alege categorie produs", class:"select_option", id:"categori1" %>

                           </div>
                            <div class="search_box">
                                <input placeholder="Caută produs..." type="text" id="search" name="search">
                                 <button type="submit"><span class="lnr lnr-magnifier"></span></button>
                            </div>
                         <% end %>
                    </div>
                    <div class="header_account_area col-lg-5">
                        <div class="col-lg-9">
                            <div class="call-support">
                                <p><a href="#">(0258) 710 634</a> <a href="#">(0258) 710 664</a>Suport Clienți</p>
                            </div>
                        </div>
                        <div id="cart" class="col-lg-3">
                            <%= render partial:"public/cart" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
